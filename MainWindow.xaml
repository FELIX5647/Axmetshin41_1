<Window x:Class="Axmetshin41.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Axmetshin41"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontFamily="Comic Sans MS" Icon="res/icon.ico" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        
        <Frame Grid.Row="0" Background="#FFFFCC99"></Frame>
        <Frame Grid.Row="1" Name="MainFrame" ContentRendered="MainFrame_ContentRendered" NavigationUIVisibility="Hidden"></Frame>
        <Frame Grid.Row="2" Background="#FFFFCC99"></Frame>
        <Image Grid.Row="0" Source="res/logo.png" HorizontalAlignment="Left"></Image>

        <TextBlock Grid.Column="0" Text="ООО 41 размер" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="30"></TextBlock>
        <Button Content="Назад" HorizontalAlignment="Right" VerticalAlignment="Bottom" Name="BtnBack" Click="BtnBack_Click"></Button>
    </Grid>
</Window>
